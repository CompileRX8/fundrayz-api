{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowJs": false,
    "lib": [
      "es2015",
      "dom"
    ]
  },
  "include": [ "common/**/*.ts", "server/**/*.ts", "client/**/*.ts" ]
}
